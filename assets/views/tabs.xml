<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%">
    <label text="TabView" />
    <box width="100%" height="1" style="background-color: #000000;" />
    <grid>
        <!--  top tabview -->
        <tabview width="200" height="100">
            <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 1" />
            </box>
            <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 2" />
            </box>
        </tabview>
        
        <tabview width="200" height="100">
            <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 1" />
            </box>
            <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 2" />
            </box>
            <box text="Page 3" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 3" />
            </box>
            <box text="Page 4" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 4" />
            </box>
        </tabview>
        
        <!-- bottom tabview -->
        <tabview width="200" height="100" tabPosition="bottom">
            <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 1" />
            </box>
            <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 2" />
            </box>
        </tabview>
        
        <tabview width="200" height="100" tabPosition="bottom">
            <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 1" />
            </box>
            <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 2" />
            </box>
            <box text="Page 3" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 3" />
            </box>
            <box text="Page 4" icon="haxeui-core/styles/default/haxeui_tiny.png">
                <button text="Page 4" />
            </box>
        </tabview>
    </grid>    

    <spacer height="10" />
    
    <label text="TabBar" />
    <box width="100%" height="1" style="background-color: #000000;" />
    <grid>
        <!-- top tabbar -->
        <tabbar width="200">
            <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
        </tabbar>
        
        <tabbar width="200">
            <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 2" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 3" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 4" icon="haxeui-core/styles/default/haxeui_tiny.png" />
        </tabbar>

        <!-- bottom tabbar -->
        <tabbar width="200" tabPosition="bottom">
            <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
        </tabbar>
        
        <tabbar width="200" tabPosition="bottom">
            <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 2" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 3" icon="haxeui-core/styles/default/haxeui_tiny.png" />
            <button text="Item 4" icon="haxeui-core/styles/default/haxeui_tiny.png" />
        </tabbar>
    </grid>
</vbox>