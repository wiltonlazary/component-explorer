<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%">
    <label text="Standard" />
    <box width="100%" height="1" style="background-color: #000000;" />
    
    <grid>
        <label text="Width:" verticalAlign="center" />
        <slider pos="200" min="110" max="600" onchange="vbox1.width = this.value" />
        
        <label text="Height:" verticalAlign="center" />
        <slider pos="95" min="95" max="600" onchange="vbox1.height = this.value" />
    </grid>
    <vbox id="vbox1" style="border: 1px solid #ababab;padding:5px;" width="200" height="95">
        <box width="100" height="33%" style="background-color: red;border:1px solid red;background-opacity: .5" />
        <box width="100" height="34%" style="background-color: green;border:1px solid green;background-opacity: .5" horizontalAlign="center" />
        <box width="100" height="33%" style="background-color: blue;border:1px solid blue;background-opacity: .5" horizontalAlign="right" />
    </vbox>
</vbox>